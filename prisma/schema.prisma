generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @unique @default(uuid())
  title        String
  image        String
  date         DateTime
  locationName String
  locationX    Float
  locationY    Float
  link         String
}

model Article {
  id           String   @id @unique @default(uuid())
  title        String
  slug         String   @unique
  image        String
  description  String
  content      String
  publishedAt  DateTime @default(now())
  authorName   String
}

model User {
  id           String   @id @unique @default(uuid())
  name         String
  email        String   @unique
  password     String
}